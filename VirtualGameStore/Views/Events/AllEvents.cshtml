@model List<Event>
@{
    ViewData["Title"] = "All Events";
}
@section scripts {
    <script src="~/js/site.js"></script>
}
<div class="row justify-content-start text-snow-bright">
    <h1 class="display-4 mb-4 text-uppercase">Upcoming Events</h1>
    <div id="eventsList" class="row m-0">
        @foreach (var e in Model)
        {
            <div class="col-12 p-0">
                <div class="card shadow rounded bg-night text-snow-bright m-2">
                    
                    <div class="card-header row text-start p-2 m-0 bg-shade">
                        <h4 class="p-1 m-0 card-title text-uppercase fw-bold">
                            @e.EventName
                        </h4>
                    </div>
                    <div class="card-body text-start m-0 p-0 text-uppercase">
                        <div class="row justify-content-end p-2 m-0">
                            <div class="col-auto p-0 text-snow-bright fw-bold pe-2">
                                @e.EventRegistrations.Count() Registered
                            </div>
                        </div>
                        <div class="row justify-content-between p-2 m-0">
                            <div class="col-auto p-0">
                                @e.StartTime.Value.ToString("dddd, MMM d, yyyy h:mm tt") - @e.EndTime.Value.ToString("dddd, MMM d, yyyy h:mm tt")
                            </div>
                        </div>
                        <div class="row justify-content-between p-2 m-0">
                            <div class="col-auto p-0 text-secondary">
                                @e.Location
                            </div>
                        </div>
                        
                        <div class="row justify-content-end p-2 m-0">
                            <div class="col-6 col-md-4 col-lg-3 px-1">
                                <a asp-controller="Events" asp-action="ViewEvent" asp-route-id="@e.EventId" class="col-12 btn btn-frost-outline">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
