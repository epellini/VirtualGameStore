@{
    ViewData["Title"] = "Preferences";
}

<section>
    <div class="container mt-4">
        <h2>Preferences</h2>
        <hr />

        <form>
            <!-- Shipping Address -->
            <fieldset disabled>
                <legend>Shipping Address</legend>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" value="John Doe">
                    </div>
                    <div class="col-md-6">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phoneNumber" value="(123) 456-7890">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="addressLine1" class="form-label">Address Line 1</label>
                    <input type="text" class="form-control" id="addressLine1" value="123 Main St">
                </div>
                <div class="mb-3">
                    <label for="addressLine2" class="form-label">Address Line 2</label>
                    <input type="text" class="form-control" id="addressLine2" value="Apt 123">
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" value="Anytown">
                    </div>
                    <div class="col-md-6">
                        <label for="province" class="form-label">Province</label>
                        <input type="text" class="form-control" id="province" value="ON">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="postalCode" class="form-label">Postal Code</label>
                        <input type="text" class="form-control" id="postalCode" value="N4G 4H7">
                    </div>
                    <div class="col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" value="Canada">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="deliveryInstructions" class="form-label">Delivery Instructions</label>
                    <textarea class="form-control" id="deliveryInstructions" rows="3">Leave package by the door.</textarea>
                </div>

                <!--Favourite Platform-->
                <div class="mb-3">
                    <legend>Favourite Platform</legend>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <select class="form-select">
                                <option value="PC">PC</option>
                                <option value="PlayStation">PlayStation</option>
                                <option value="Switch">Switch</option>
                                <option value="Xbox">Xbox</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Favourite Genre -->
                <div class="mb-3">
                    <legend>Favourite Genre</legend>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <select class="form-select">
                                <option value="English">Action</option>
                                <option value="Spanish">Shooter</option>
                                <option value="French">Simulation</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Preferred Language -->
                <div class="mb-3">
                    <legend>Preferred Language</legend>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <select class="form-select">
                                <option value="English">English</option>
                                <option value="Spanish">Spanish</option>
                                <option value="French">French</option>
                            </select>
                        </div>
                    </div>
                </div>

            </fieldset>

            <!--Edit Button-->
            <button id="editButton" type="button" class="btn btn-primary">Edit</button>
        </form>
    </div>
</section>