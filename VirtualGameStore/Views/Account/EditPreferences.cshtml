@{
    ViewData["Title"] = "Edit Preferences";
}

<h2>Preferences</h2>
<hr />

<form>
    <!-- Shipping Address -->
    <fieldset>


        <!--Favourite Platform-->
        <div class="mb-3">
            <legend>Favourite Platform</legend>
            <div class="row mb-3">
                <div class="col-md-6">
                    <select class="form-select">
                        <option value="PC">PC</option>
                        <option value="PlayStation">PlayStation</option>
                        <option value="Switch">Switch</option>
                        <option value="Xbox">Xbox</option>
                    </select>
                </div>
            </div>
        </div>


        <!-- Favourite Genre -->
        <div class="mb-3">
            <legend>Favourite Genre</legend>
            <div class="row mb-3">
                <div class="col-md-6">
                    <select class="form-select">
                        <option value="English">Action</option>
                        <option value="Spanish">Shooter</option>
                        <option value="French">Simulation</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Preferred Language -->
        <div class="mb-3">
            <legend>Preferred Language</legend>
            <div class="row mb-3">
                <div class="col-md-6">
                    <select class="form-select">
                        <option value="English">English</option>
                        <option value="Spanish">Spanish</option>
                        <option value="French">French</option>
                    </select>
                </div>
            </div>
        </div>

    </fieldset>

    <!--Save and Cancel Buttons-->

    <button id="editButton" type="button" class="btn btn-primary">Cancel</button>

    <button id="editButton" type="button" class="btn btn-primary">Save</button>
</form>