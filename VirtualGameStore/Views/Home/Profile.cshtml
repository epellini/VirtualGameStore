@model User
@{
    ViewData["Title"] = "My Profile";
}

<section>
    <h1>My Profile</h1>
    <div class="container py-5">

        <!--User Profile Card-->
        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow bg-night text-snow-bright mb-4">
                    <div class="card-body text-center">
                        <h5 class="my-3">@Model.UserName</h5>
                        @if (Model.Profile != null)
                        {
                            @if (Model.Profile.Gender != null)
                            {
                                <p class="text-muted mb-1">@Model.Profile.Gender</p>
                            }
                            @if (Model.Profile.BirthDate != null)
                            {
                                <p class="text-muted mb-4">@Model.Profile.BirthDate</p>
                            }
                            <fieldset disabled>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        Receiving Promotions
                                    </label>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>

                <!--Buttons-->
                <div class="card shadow bg-night text-snow-bright mb-4 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">

                            <li class="bg-night text-snow-bright list-group-item d-flex justify-content-between align-items-center p-2">
                                <a href="#" type="button" class="btn btn-frost-primary p-2 text-uppercase">Wishlist</a>
                                <a asp-action="EditProfile" asp-controller="Home" class="btn btn-frost-primary p-2 text-uppercase">Edit Profile</a>
                                <a asp-action="EditPreferences" asp-controller="Home" class="btn btn-frost-primary p-2 text-uppercase">Preferences</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>


            <!--Friend List-->
            <div class="col-lg-8">
                <div class="card shadow bg-night text-snow-bright mb-4 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            @* <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <p class="mb-0">FRIEND #1</p> <!--Friend Item-->
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <p class="mb-0">FRIEND #2</p> <!--Friend Item-->
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <p class="mb-0">FRIEND #3</p> <!--Friend Item-->
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <p class="mb-0">FRIEND #4</p> <!--Friend Item-->
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <p class="mb-0">FRIEND #5</p> <!--Friend Item-->
                            </li> *@
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="my-4"></div> <!--Weird spacer but it works for now-->
        <!--Games List-->
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow bg-night text-snow-bright mb-4 mb-md-0">
                    <div class="card-body">
                        <p class="mb-4">
                            My Games
                        </p>

                        <ul class="list-group">
                            @* <li class="list-group-item">Game 1</li>
